<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 对包中的所有类进行扫描 com.kafka.controller -->
	<context:component-scan base-package="com.kafka.controller" />

	<!-- 定义Spring MVC 的模板文件 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" /><!-- 支持JSTL -->
		<property name="prefix" value="/WEB-INF/jsp/" /> <!-- 模板的路径 -->
		<property name="suffix" value=".jsp" /> <!-- 模板文件的后缀 -->
	</bean>

</beans>
